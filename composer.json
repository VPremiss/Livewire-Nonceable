{
    "name": "vpremiss/livewire-nonceable",
    "description": "The security Livewire public methods needed!",
    "keywords": [
        "vpremiss",
        "livewire-nonceable",
        "laravel",
        "livewire",
        "tallstack",
        "sanctum",
        "security",
        "nonce"
    ],
    "homepage": "https://github.com/VPremiss/LivewireNonceable",
    "license": "MIT",
    "authors": [
        {
            "name": "GoodM4ven",
            "email": "goodm4ven@proton.me",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/contracts": "^11.0",
        "livewire/livewire": "^3.0",
        "predis/predis": "^2.0",
        "spatie/laravel-package-tools": "^1.16",
        "vpremiss/crafty": "^4.4.1"
    },
    "require-dev": {
        "nunomaduro/collision": "^8.1.1",
        "larastan/larastan": "^2.9",
        "orchestra/testbench": "^9.0.0",
        "pestphp/pest": "^2.34",
        "pestphp/pest-plugin-arch": "^2.7",
        "pestphp/pest-plugin-laravel": "^2.3",
        "phpstan/extension-installer": "^1.3",
        "phpstan/phpstan-deprecation-rules": "^1.1",
        "phpstan/phpstan-phpunit": "^1.3"
    },
    "autoload": {
        "psr-4": {
            "VPremiss\\LivewireNonceable\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "VPremiss\\LivewireNonceable\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/",
            "Workbench\\Database\\Factories\\": "workbench/database/factories/",
            "Workbench\\Database\\Seeders\\": "workbench/database/seeders/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@clear",
            "@prepare"
        ],
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test:coverage": "@test --coverage",
        "green": [
            "@analyse",
            "@test:coverage"
        ],
        "bench": "vendor/bin/testbench",
        "bench:install": "@bench workbench:install",
        "clear": "@bench package:purge-skeleton --ansi",
        "prepare": "@bench package:discover --ansi",
        "build": "@bench workbench:build --ansi",
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "@clear",
            "@prepare",
            "@build",
            "@bench serve"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "VPremiss\\LivewireNonceable\\LivewireNonceableServiceProvider"
            ],
            "aliases": []
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}